<Window x:Class="LRDT.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LRDT"
        mc:Ignorable="d"
        Title="LRDT bejelentkezés" Height="450" Width="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="0.5*"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--<TextBlock Text="Üdvözöljük" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30px" />-->
            <Image Source="/img/logo_lrdt.png" />
            <TextBlock Grid.Row="1" Text="Felhasználó" VerticalAlignment="Bottom" Margin="15px 0px" />
            <ComboBox x:Name="cbUser" Grid.Row="2" VerticalAlignment="Center" Margin="15px" SelectionChanged="cbUser_SelectionChanged" />
            <Button x:Name="btnLogin" Grid.Row="3" Content="Bejelentkezés" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20px" IsEnabled="False" Click="btnLogin_Click" />
        </Grid>
    </Grid>
</Window>
