<Window x:Class="LRDT.TetelHozzaadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LRDT"
        mc:Ignorable="d"
        Title="TetelHozzaadWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Tételek" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="5px 0px" />
        <TextBlock x:Name="tbKereses" Grid.Row="1" Grid.Column="0" Margin="5px" />
        <CheckBox x:Name="chbGyerek" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5px" Content="Gyerek menü" />

        <ListBox x:Name="lbElerhetoTetelek" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="6" Margin="5px" />

        <TextBlock Text="Allergének" Grid.Row="2" Grid.Column="2" VerticalAlignment="Bottom" Margin="5px 0px" Grid.ColumnSpan="3" />
        <TextBlock x:Name="TBAllergenek" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Margin="5px 0px" Grid.ColumnSpan="3" />

        <Image x:Name="imgEtel" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="3" />

        <TextBlock x:Name="TBAr" Grid.Row="5" Grid.Column="2" VerticalAlignment="Bottom" FontSize="30px" HorizontalAlignment="Right" Grid.ColumnSpan="3" />
        <TextBlock Text="Mennyiség" Grid.Row="6" Grid.Column="2" VerticalAlignment="Bottom" Margin="5px 0px" />
        <TextBox x:Name="tbMennyiseg" Grid.Row="7" Grid.Column="2" Margin="5px" />
        <Button x:Name="btnHozzaad" Content="Hozzáad" Grid.Row="7" Grid.Column="3" Margin="5px" />
        <Button x:Name="btnVissza" Content="Vissza" Grid.Row="7" Grid.Column="4" Margin="5px" />
    </Grid>
</Window>
